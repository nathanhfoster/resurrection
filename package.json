{
  "name": "resurrection",
  "version": "1.2.12",
  "description": "State management library that follows Flux / Redux / Thunk architecture but uses React&#x27;s latest useContext and useReducer hooks.",
  "author": "nathanhfoster",
  "license": "MIT",
  "repository": "nathanhfoster/resurrection",
  "main": "dist/index.umd.js",
  "module": "dist/index.modern.module.js",
  "types": "dist/index.d.ts",
  "source": "src/index.ts",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "microbundle",
    "dev": "microbundle watch",
    "start": "microbundle watch",
    "prepare": "run-s build",
    "test": "run-s test:unit test:lint test:build",
    "test:build": "run-s build",
    "test:lint": "tslint -p tsconfig.json",
    "test:unit": "cross-env CI=1 react-scripts test --env=jsdom",
    "test:watch": "react-scripts test --env=jsdom",
    "predeploy": "cd example && npm install && npm run build",
    "deploy": "gh-pages -d example/build",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.10",
    "@testing-library/react": "^11.2.5",
    "@testing-library/react-hooks": "^7.0.2",
    "@testing-library/user-event": "^13.0.10",
    "@types/events": "^3.0.0",
    "@types/fontfaceobserver": "^0.0.6",
    "@types/json-form-data": "^1.7.0",
    "@types/react": "^17.0.2",
    "@types/react-countup": "^4.3.0",
    "@types/react-dom": "^17.0.2",
    "@types/styled-components": "^5.1.0",
    "cross-env": "^7.0.3",
    "faker": "^5.5.1",
    "gh-pages": "^2.2.0",
    "microbundle": "^0.13.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "^4.0.3",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-react": "^5.0.0",
    "typescript": "^4.3.5",
    "typescript-plugin-css-modules": "^3.4.0"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "resurrection",
    "redux",
    "state",
    "management",
    "recoil",
    "redux-thunk",
    "react-redux",
    "react",
    "hooks",
    "context",
    "reducer",
    "useReducer",
    "useContext",
    "useSelector",
    "useDispatch",
    "dispatch",
    "flux",
    "predictable",
    "functional",
    "immutable",
    "elm"
  ],
  "bugs": {
    "url": "https://github.com/nathanhfoster/resurrection/issues"
  },
  "homepage": "https://github.com/nathanhfoster/resurrection#readme"
}
